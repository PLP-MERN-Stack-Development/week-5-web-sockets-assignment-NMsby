# Production Server Configuration
PORT=5000
NODE_ENV=production

# Client URL for CORS - Update with your deployed client URL
CLIENT_URL=https://your-client-domain.com

# Strong JWT Secret for production
JWT_SECRET=your_super_secure_production_jwt_secret_key_here_min_256_chars

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Socket.io Production Configuration
SOCKET_PING_TIMEOUT=20000
SOCKET_PING_INTERVAL=10000

# Security headers
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100